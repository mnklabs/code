	<build>

		<finalName>3112132255</finalName>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.16</version>
				<configuration>
					<useFile>false</useFile>
					<argLine>-DENV=dev
						-DCONF_PATH=${basedir}/../../rulesengine-resources/resources/conf</argLine>
				</configuration>
			</plugin>



			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<mainClass>com.techgene.rulesengine.Main</mainClass>
					<systemProperties>
						<systemProperty>
							<key>ENV</key>
							<value>dev</value>
						</systemProperty>
						<systemProperty>
							<key>CONF_PATH</key>
							<value>${basedir}/../../rulesengine-resources/resources/conf</value>
						</systemProperty>
					</systemProperties>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<configuration>
					<tasks>
						<ant antfile="build.xml" target="copy" />
					</tasks>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-optional</artifactId>
						<version>1.5.3-1</version>
					</dependency>
				</dependencies>
			</plugin>

		</plugins>
	</build>


